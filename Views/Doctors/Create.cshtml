@model VitaCore.Models.DoctorModel

@{
    ViewData["Title"] = "Add New Doctor";
}

<div class="row mt-2">
    <div class="col-md-12">
        <h2>Add New Doctor</h2>
        <hr />
        <form asp-action="Create" asp-controller="Doctors" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="honorific_title" class="control-label">Title</label>
                <input asp-for="honorific_title" class="form-control" />
                <span asp-validation-for="honorific_title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="gender" class="control-label">Gender</label>
                <select asp-for="gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="bio" class="control-label">Bio</label>
                <textarea asp-for="bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="bio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="availability_hours" class="control-label">Working Hours</label>
                <input asp-for="availability_hours" class="form-control" placeholder="e.g., Mon-Fri 9:00 AM - 5:00 PM" />
                <span asp-validation-for="availability_hours" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="clinic_address" class="control-label">Clinic Address</label>
                <input asp-for="clinic_address" class="form-control" />
                <span asp-validation-for="clinic_address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Specialization" class="control-label">Specialization</label>
                <select asp-for="Specialization" class="form-control">
                    <option value="">-- Select Specialization --</option>
                    <option>Cardiology</option>
                    <option>Dermatology</option>
                    <option>Endocrinology</option>
                    <option>Gastroenterology</option>
                    <option>Neurology</option>
                    <option>Oncology</option>
                    <option>Orthopedics</option>
                    <option>Pediatrics</option>
                    <option>Psychiatry</option>
                    <option>Radiology</option>
                    <option>Urology</option>
                </select>
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Mark as Favorite</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="is_favorite" value="true" id="favoriteYes" />
                    <label class="form-check-label" for="favoriteYes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="is_favorite" value="false" id="favoriteNo" />
                    <label class="form-check-label" for="favoriteNo">No</label>
                </div>
                <span asp-validation-for="is_favorite" class="text-danger"></span>
            </div>


            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}