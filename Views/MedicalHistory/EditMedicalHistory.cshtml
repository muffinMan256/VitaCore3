@model VitaCore.Models.MedicalHistoryModel

@{
    ViewData["Title"] = "Edit Medical History";
}

<h2>Edit Medical History</h2>

<form asp-action="Edit" asp-controller="MedicalHistory" method="post">
    <div class="mb-3">
        <label class="form-label"><strong>History</strong></label>
        <textarea name="History" class="form-control">@Model.History</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Allergies</strong></label>
        <input name="Allergies" class="form-control" value="@Model.Allergies" />
    </div>

    <div class="mb-3">
        <label class="form-label"><strong>Cardiology Consultations</strong></label>
        <input name="CardiologyConsultations" class="form-control" value="@Model.CardiologyConsultations" />
    </div>

    <input type="hidden" name="PatientId" value="@Model.PatientId" />
    <input type="hidden" name="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Patients" asp-route-id="@Model.PatientId" class="btn btn-secondary">Cancel</a>
</form>