@model VitaCore.Models.CompleteProfileModel

<div class="form-wrapper my-5">

    <form asp-action="CompleteProfile" asp-controller="Account" method="post" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" maxlength="50" required />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" maxlength="50" required />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Birthday" class="form-label">Birthday</label>
                <input asp-for="Birthday" type="date" class="form-control" required />
                <span asp-validation-for="Birthday" class="text-danger small"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-3">Complete Profile</button>
    </form>

</div>